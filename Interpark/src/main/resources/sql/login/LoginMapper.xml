     사용자 ID 찾기
   <select id="selectFindId" resultType="kr.kosmo.jobkorea.login.model.LgnInfoModel">
      /*kr.kosmo.jobkorea.login.dao.LoginDao.selectFindId*/
      SELECT  ta.lgn_id
      , tb.cpn_ctr
      , tb.cpn_1
      , tb.cpn_2
      , tb.cpn_3
      , tb.eml
      FROM   tm_usr_mst ta
         ,   tn_usr_dtl_info tb
      WHERE   ta.usr_sst_id = tb.usr_sst_id
      AND   ta.use_poa = 'Y'
      AND   ta.dlt_poa = 'N'
      <choose>
         <when test ="(type != null) and (type eq 'P'.toString())">
            AND   ta.usr_nm = #{usr_nm}
            AND tb.cpn_ctr = #{cpn_ctr}
            AND tb.cpn_1 = #{cpn_1}
            AND tb.cpn_2 = #{cpn_2} 
            AND tb.cpn_3 = #{cpn_3}
         </when>
         <when test ="(type != null) and (type eq 'E'.toString())">
            AND   ta.usr_nm = #{usr_nm}
            AND tb.eml = #{eml}
         </when>
         <otherwise>
            AND 1=2
         </otherwise>
      </choose>
     </select>
      
     사용자 PW 찾기
   <select id="selectFindPw" resultType="kr.kosmo.jobkorea.login.model.LgnInfoModel">
      /*kr.kosmo.jobkorea.login.dao.LoginDao.selectFindPw*/
      SELECT  ta.lgn_id
      , ta.pwd
      , tb.cpn_ctr
      , tb.cpn_1
      , tb.cpn_2
      , tb.cpn_3
      , tb.eml
      FROM   tm_usr_mst ta
         ,   tn_usr_dtl_info tb
      WHERE   ta.usr_sst_id = tb.usr_sst_id
      AND   ta.use_poa = 'Y'
      AND   ta.dlt_poa = 'N'
      <choose>
         <when test ="(type != null) and (type eq 'P'.toString())">
            AND ta.lgn_id = #{lgn_id}
            AND   ta.usr_nm = #{usr_nm}
            AND tb.cpn_ctr = #{cpn_ctr}
            AND tb.cpn_1 = #{cpn_1}
            AND tb.cpn_2 = #{cpn_2}
            AND tb.cpn_3 = #{cpn_3}
         </when>
         <when test ="(type != null) and (type eq 'E'.toString())">
            AND ta.lgn_id = #{lgn_id}
            AND   ta.usr_nm = #{usr_nm}
            AND tb.eml = #{eml}
         </when>
         <otherwise>
            AND 1=2
         </otherwise>
      </choose>
     </select>
     
